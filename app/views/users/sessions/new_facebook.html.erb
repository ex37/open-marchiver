<div class="container" id="login">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

    <!-- Logo -->
    <div class="intro">
      <%= image_tag('logo_marchiver.svg', size: "112x112", class: "center-block") %>
      <h1>Marchiver</h1>
      <!--<p>You can place some text here, instructing the user.</p>-->
    </div>

    <!-- Facebook login -->
    <p>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Entrar via #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary" %>
        <% end -%>
      <% end -%>
    </p>

    </div>
  </div>
</div>